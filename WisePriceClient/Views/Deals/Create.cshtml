@{
    ViewData["Title"] = "Add Deal";
}

<div class='create-body'>
  <div class='create-top'>
      <div class='col'></div>
      <h1>Add A Deal</h1>
      <div class='col'></div>
  </div>

  <div class='create-sub'>

    <form class="ui equal width form">

        <div class="field">
          <label>Item</label>
          <div class="ui compact menu">
            <div class="ui simple selection dropdown">
            Select the item
              <i class="dropdown icon"></i>
              <div class="menu">
              <!-- FOR LOOP FOR ALL ITEMS -->
                <div class="item">ITEM FOR LOOP</div>
              </div>
            </div>
          </div>
        </div>

        <div class="field">
          <label>Add a new item</label>
          <input type="text" placeholder="Spaghetti Squash">
        </div>
        
        <div class="field">
          <label>Location</label>
          <div class="ui compact menu">
            <div class="ui simple selection dropdown">
            Select the location
              <i class="dropdown icon"></i>
              <div class="menu">
              <!-- FOR LOOP FOR ALL LOCATIONS -->
                <div class="item">LOCATION FOR LOOP</div>
              </div>
            </div>
          </div>
        </div>

        <div class="field">
          <label>Price per unit</label>
          <input type="text" placeholder="$3.50 per lb">
        </div>
      </div>

      <button class='ui button' type='submit'>Add Deal</button>

  </form>

</div>


